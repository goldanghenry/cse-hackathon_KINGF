doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title momItMom
        link(rel="stylesheet", href="static/css/consulting_room2.css")
    body 
        style.
            h1{
                width: 150px;
                font-size: 50px;
                color: rgb(242,153,145);
                margin: 0 auto;
                margin-bottom: 20px;
            }
            #welcome{
                text-align: center;
            }
            input[type=text]{
                border: 2px solid pink;
                width: 350px;
                height: 30px;
                font-size: 17px;
                border-radius: 15px;
                padding-left: 10px;
            }
            input::placeholder{
                color: rgb(74,103,150);
            }
            input:focus{
                outline: none;
            }

            #myStream{
                margin: 0 auto;
                text-align: center;
            }
            #peerStream{
                margin: 0 auto;
                text-align: center;
            }
            button{
                border-radius: 15px;
                font-size: 17px;
                padding: 7px 10px;
                background-color: rgb(242,153,145);
                border: 2px solid rgb(242,153,145);
                
            }
            #mute{
                text-align: center;
                
            }
            #camera{
                text-align: center;
            }
            select {
                width: 200px;
                padding: .8em .5em; 
                border: 1px solid #999;
                font-family: inherit;  
                border-radius: 15px; 

                -webkit-appearance: none; 
                -moz-appearance: none;appearance: none;
            }

        
        header 
            h1 ROOM

        main 
            div#welcome
                form
                    input(placeholder="상담 받는 회원님의 이름을 입력해주세요.", required, type="text")
                    button Enter room
            div#call 
                div#myStream
                    video#myFace(autoplay, playsinline, width ="200", height="200")  
                    div
                        button#mute Mute
                        button#camera Camera Off
                        select#cameras
                div#peerStream
                    video#peerFace(autoplay, playsinline, width ="700", height="700") 

        script(src="/socket.io/socket.io.js")
        script(src="/public/app.js")